{% spaceless %}
    {% if typeMacro == 'form_text' %}
        <div class="{{ class }}">
            <div class="form-group">
                {% if label is not null %}
                    <label class="control-label">
                        {{ label|raw|title }} {% if required==true %}<span class="symbol required"></span>{% endif %}
                    </label>
                {% endif %}
                <input type="text" name="{{ name }}" value="{{ value }}" class="form-control ">
            </div>
        </div>
    {% endif %}
    {% if typeMacro == 'form_file' %}
        <div class="{{ class }}">
            <div class="form-group">
                <label class="control-label">
                    {{ label }} {% if required==true %}<span class="symbol required"></span>{% endif %}
                </label>
                <div class="fileupload fileupload-new" data-provides="fileupload">
                    <div class="input-group">
                        <div class="form-control uneditable-input">
                            <i class="fa fa-file fileupload-exists"></i>
                            <span class="fileupload-preview"></span>
                        </div>
                        <div class="input-group-btn">
                            <div class="btn btn-light-grey btn-file">
                                <span class="fileupload-new"><i class="fa fa-folder-open-o"></i> Select file</span>
                                <span class="fileupload-exists"><i class="fa fa-folder-open-o"></i> Change</span>
                                {{ form_widget(from) | raw }}
                                {{ form_errors(from) | raw }}
                            </div>
                            <a href="#" class="btn btn-light-grey fileupload-exists" data-dismiss="fileupload">
                                <i class="fa fa-times"></i> Remove
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    {% if typeMacro == 'form_read_only' %}
        <div class="{{ class }}">
            <div class="form-group">
                <label class="control-label">
                    {{ label }} {% if required==true %}<span class="symbol required"></span>{% endif %}
                </label>
                {{ form_widget(from, { 'attr':{'readonly':'readonly'} }) | raw }}
                {{ form_errors(from) | raw }}
            </div>
        </div>
    {% endif %}
    {% if typeMacro == 'form_input' %}
        <div class="{{ class }}">
            <div class="form-group">
                {% if label is not null %}
                    <label class="control-label">
                        {{ label|raw }} {#{% if isTranslatableField(from.parent.vars.value,from.vars.name) %} ({{ app.request.locale|upper }}) {% endif %}#} {% if from.vars.required %}<span class="symbol required"></span>{% endif %}
                    </label>
                {% else %}
                    {{ form_label(from) }}
                {% endif %}

                {% set attr={} %}
                {% set id = from.vars.id %}
                {% if changeId %}
                    {% set attr={'id' : id ~ "_"} %}
                {% endif %}

                {% if value is null %}
                    {{ form_widget(from,attr) | raw }}
                {% else %}
                    {% set attr=attr|merge({'value':value}) %}
                    {{ form_widget(from,attr) | raw }}
                {% endif %}

                {{ form_errors(from) | raw }}
                {% if smallText is not null %}
                    <small>{{ smallText| raw }}</small>
                {% endif %}
            </div>
        </div>
    {% endif %}
    {% if typeMacro == 'form_select2' %}
        {% set attr={'class': 'select-size-xs'} %}
        {% if selectAll %}
            <div class="{{ class }}">
                <div class="form-group">
                    <label class="control-label">{{ label|raw|title }} {% if from.vars.required %}<span
                            class="symbol required"></span>{% endif %}<span
                                style="position: absolute;right:-7px;">(x)Tous</span></label>
                    <div class="input-group">
                        {{ form_widget(from, {'attr': attr}) }}
                        {{ form_errors(from) | raw }}
                        {% if smallText is not null %}
                            <small>{{ smallText| raw }}</small>
                        {% endif %}
                        <span class="input-group-addon">
                                                                <input type="checkbox"
                                                                       class="styled all_select_deselect"
                                                                       name="input-addon-checkbox"
                                                                       data-select="{{ from.vars.id }}">
                                                            </span>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="{{ class }}">
                <div class="form-group">
                    {% if label is not null %}
                        <label class="control-label">
                            {{ label|raw|title }} {% if from.vars.required %}<span
                                    class="symbol required"></span>{% endif %}
                        </label>
                    {% endif %}
                    {{ form_widget(from, {'attr': attr}) }}
                    {{ form_errors(from) | raw }}
                    {% if smallText is not null %}
                        <small>{{ smallText| raw }}</small>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    {% endif %}
