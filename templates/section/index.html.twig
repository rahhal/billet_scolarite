{% extends "base.html.twig" %}

{% block title %}{{ "Section"|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset("assets/css/style-crud.css") }}" rel="stylesheet" type="text/css">
    <link href="{{ asset("assets/css/bootstrap-table.min.css") }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
    <style>
        div.icon-spinner3 {
            font-size: 100%
        }

        .m-t-25 {
            margin-top: 25px;
        }

    </style>
      <div class="page-header page-header-default">
            <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                                        <li><a href="index.html"><i class="icon-home2 position-left"></i> {{ "Referentiel"|trans }}</a></li>
                                        <li class="active">{{ "Section"|trans }}</li>
                    </ul>
                    {% include "layout.html.twig" %} 
            </div>
    </div>
    <div id="message-alert"></div>
    <div id="modal-add-section" class="modal fade" tabindex="-1">
        <div id="modal-message-alert"></div>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h6 class="modal-title">{{ "Ajout d'un nouvel élément"|trans }}</h6>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body" style="overflow:hidden;">
                    {{ include("section/form.html.twig",{action:path("section_new")}) }}
                </div>
            </div>
        </div>
    </div>
    <div id="modal-edit-section" class="modal fade" tabindex="-1">
        <div id="modal-message-alert"></div>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h6 class="modal-title">{{ "Modifier élément"|trans }}</h6>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body" style="overflow:hidden;">

                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">{{ "Sections"|trans }} (<span
                        id="count-item-section">{{ sections|length }}</span> {{ "éléments"|trans }})<a
                        class="heading-elements-toggle"><i class="icon-more"></i></a></h5>
            <div class="heading-elements">
                <a href="#modal-add-section" data-toggle="modal" class="btn border-primary btn-xs text-slate-800 btn-flat"><i
                            class="icon-plus-circle2 position-left"></i> {{ "Nouvel  Élément"|trans }}</a>
            </div>
        </div>


        <div class="panel-body table-responsive">

            <table class="table table-striped" id="table-liste-section" data-toggle="table" data-search="true" data-pagination="true">
                <thead>
                <tr>
                    <th data-field="id"></th>
                    <th data-field="code">{{ "Code"|trans }}</th>
                    <th data-field="libelleAR">{{ "Libellé AR"|trans }}</th>
                    <th data-field="libelleFR">{{ "Libellé FR"|trans }}</th>

                    <th class="action" data-field="action">{{ "Actions"|trans }}</th>
                </tr>
                </thead>
                <tbody id="table_div">
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>$( document ).ready(function() {$("#table-liste-section").bootstrapTable("hideColumn", "id");});</script>
<script>
setTimeout(function(){
{% for section in sections %}
    {{ include("section/item.html.twig",{"section":section,"list":true}) }}
{% endfor %}
}, 500);
</script>
    {{ include("jquery_crud.html.twig",{"entity":"section","bootstrapTable":true}) }}
{% endblock %}
