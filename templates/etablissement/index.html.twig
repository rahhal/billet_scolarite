{% extends "base.html.twig" %}

{% block title %}{{ "Etablissement"|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset("assets/css/style-crud.css") }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
    <style>
        div.icon-spinner3 {
            font-size: 100%
        }

        .m-t-25 {
            margin-top: 25px;
        }

    </style>
      <div class="page-header page-header-default">
            <div class="breadcrumb-line">
                    <ul class="breadcrumb">
                         <li><a href="index.html"><i class="icon-home2 position-left"></i> {{ "Données Statique"|trans }}</a></li>
                         <li class="active">{{ "Etablissement"|trans }}</li>
                    </ul>
                    {% include "layout.html.twig" %} 
            </div>
      </div>
    <div id="message-alert"></div>
    <div id="modal-edit-etablissement" class="modal fade" tabindex="-1">
        <div id="modal-message-alert"></div>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h6 class="modal-title">{{ "Modifier élément"|trans }}</h6>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="overflow:hidden;">
                    {# {% for etablissement in etablissements %} #}
                        {# {{ include("AppBundle:StaticData:Etablissement/form.html.twig",{action:path("staticdata_etablissement_edit", {"id": etablissement.id})}) }} #}
                    {# {% endfor %} #}
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-flat">
        <div class="panel-heading">
            <table class="table table-striped" id="table-liste-etablissement" >
                <thead>
                <tr>
                    <th data-sort="ministere">{{ "Ministère"|trans }}</th>
                    <th data-sort="mandoubia">{{ "Mandoubia"|trans }}</th>
                    <th data-sort="code">{{ "Code"|trans }}</th>
                    <th data-sort="nom">{{ "Nom"|trans }}</th>
                    <th>{{ "gouvernorat"|trans }}</th>
                    <th data-sort="ville">{{ "Ville"|trans }}</th>
                    <th data-sort="adresse">{{ "Adresse"|trans }}</th>
                    <th data-sort="tel">{{ "Tél"|trans }}</th>
                    <th data-sort="fax">{{ "Fax"|trans }}</th>
                    {# <th class="action">{{ "Actions"|trans }}</th> #}
                </tr>
                </thead>
                <tbody id="table_div">
                {{ include("etablissement/liste.html.twig",{"etablissements":etablissements}) }}
                </tbody>
            </table>
        </div>
        <div class="pagination">
            {{ include("knp_paginator/pagination_render.html.twig",{"items":etablissements}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ include("jquery_crud.html.twig",{"entity":"etablissement","pagination":true,"searching":true}) }}
{% endblock %}
