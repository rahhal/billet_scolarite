{% set mode = form.vars.value is not null ? "edit" : "add" %}
{{ form_start(form,{attr : { action : action } } ) }}
{% if mode == "edit" %}
    <input type="hidden" id="id" value="{{ form.vars.value.id }}">
{% endif %}
<div class="row">
    {{ form_input("col-md-2","Ministère"|trans,form.ministere) }}
    {{ form_input("col-md-2","Mandoubia"|trans,form.mandoubia) }}
    {{ form_input("col-md-2","Code"|trans,form.code) }}
    {{ form_input("col-md-6","Nom"|trans,form.nom) }}
    {{ form_input("col-md-2","gouvernorat"|trans,form.gouvernorat) }}
    {{ form_input("col-md-2","Ville"|trans,form.ville) }}
    {{ form_input("col-md-4","Adresse"|trans,form.adresse) }}
    {{ form_input("col-md-2","Tél"|trans,form.tel) }}
    {{ form_input("col-md-2","Fax"|trans,form.fax) }}
</div>

<div class="text-right">
    <button type="submit" class="btn btn-primary"><i
                class="fa fa-{{ (mode == "edit" ? "edit" : "save") }}  position-left"></i> {{ (mode == "edit" ? "Modifier" : "Enregistrer")|trans }}
    </button>
</div>
{{ form_end(form) }}
{% if mode == "edit" %}
    <script>
        $("#modal-edit-etablissement .select-search").select2();
        $("#modal-edit-etablissement .select").select2({minimumResultsForSearch: Infinity});
    </script>
{% endif %}
